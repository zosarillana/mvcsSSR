{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "msvc-client": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "standalone": false
        },
        "@schematics/angular:directive": {
          "standalone": false
        },
        "@schematics/angular:pipe": {
          "standalone": false
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/msvc-client",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.css",
              "@angular/material/prebuilt-themes/azure-blue.css"
            ],
            "scripts": ["node_modules/flowbite/dist/flowbite.js"]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "3mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "75kb",
                  "maximumError": "90kb"
                }
              ],
              "outputHashing": "all",
              "allowedCommonJsDependencies": ["moment", "file-saver", "exceljs"]
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "msvc-client:build:production",
              "proxyConfig": "proxy.json"
            },
            "development": {
              "buildTarget": "msvc-client:build:development",
              "proxyConfig": "proxy.json"
            }
          },
          "defaultConfiguration": "development"
        },
        "server": {
          "builder": "@angular-devkit/build-angular:server",
          "options": {
            "outputPath": "dist/msvc-client/server",
            "main": "src/main.server.ts",
            "tsConfig": "tsconfig.json"
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            },
            "development": {
              "optimization": false,
              "sourceMap": true,
              "extractLicenses": false
            }
          },
          "defaultConfiguration": "production"
        },
        "prerender": {
          "builder": "@nguniversal/builders:prerender",
          "options": {
            "browserTarget": "msvc-client:build",
            "serverTarget": "msvc-client:server",
            "routes": ["/"]
          },
          "configurations": {
            "production": {
              "browserTarget": "msvc-client:build:production",
              "serverTarget": "msvc-client:server:production"
            },
            "development": {
              "browserTarget": "msvc-client:build:development",
              "serverTarget": "msvc-client:server:development"
            }
          }
        }
      }
    }
  }
}
